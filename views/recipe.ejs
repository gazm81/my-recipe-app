<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= recipe.title %> - My Recipe App</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <h1>üçΩÔ∏è My Recipe App</h1>
        <nav>
            <a href="/">Home</a>
            <a href="/add">Add Recipe</a>
            <% if (isAuthenticated) { %>
                <div class="user-info">
                    <% if (user.avatar) { %>
                        <img src="<%= user.avatar %>" alt="<%= user.displayName || user.username %>" class="user-avatar">
                    <% } %>
                    <span>Hello, <%= user.displayName || user.username %>!</span>
                    <a href="/logout" class="logout-link">Logout</a>
                </div>
            <% } %>
        </nav>
    </header>
    
    <main>
        <div class="container">
            <div class="recipe-detail">
                <h2><%= recipe.title %></h2>
                
                <div class="recipe-meta">
                    <span>üçΩÔ∏è Serves: <%= recipe.serves %></span>
                    <span>‚è±Ô∏è Prep: <%= recipe.prepTime %></span>
                    <span>üî• Cook: <%= recipe.cookTime %></span>
                </div>

                <div class="recipe-sections">
                    <section class="ingredients-section">
                        <h3>üõí Ingredients</h3>
                        <ul class="ingredients-list">
                            <% recipe.ingredients.forEach(ingredient => { %>
                                <li><%= ingredient %></li>
                            <% }) %>
                        </ul>
                    </section>

                    <section class="method-section">
                        <h3>üßë‚Äçüç≥ Method</h3>
                        <ol class="method-list">
                            <% recipe.method.forEach(step => { %>
                                <li><%= step %></li>
                            <% }) %>
                        </ol>
                    </section>

                    <% if (recipe.timing) { %>
                    <section class="timing-section">
                        <h3>‚è∞ Timing Planner</h3>
                        <div class="timing-content">
                            <%= recipe.timing %>
                        </div>
                    </section>
                    <% } %>

                    <% if (recipe.recommendedDrinks && recipe.recommendedDrinks.length > 0) { %>
                    <section class="drinks-section">
                        <h3>ü•§ Recommended Drinks</h3>
                        <ul class="drinks-list">
                            <% recipe.recommendedDrinks.forEach(drink => { %>
                                <li><%= drink %></li>
                            <% }) %>
                        </ul>
                    </section>
                    <% } %>
                </div>

                <div class="recipe-actions">
                    <a href="/" class="btn btn-secondary">‚Üê Back to Recipes</a>
                    <% if (recipe.source === 'user-added') { %>
                        <a href="/edit/<%= recipe.id %>" class="btn btn-primary">‚úèÔ∏è Edit Recipe</a>
                        <form method="POST" action="/delete/<%= recipe.id %>" style="display: inline;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this recipe?')">üóëÔ∏è Delete Recipe</button>
                        </form>
                    <% } %>
                </div>
            </div>
        </div>
    </main>
</body>
</html>